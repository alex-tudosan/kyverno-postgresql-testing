{
  "dashboard": {
    "id": null,
    "title": "Kyverno + PostgreSQL Testing Dashboard (Fixed)",
    "tags": ["kyverno", "postgresql", "policy-reports"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "title": "Policy Reports Growth by Type - Absolute Numbers",
        "type": "timeseries",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "postgres",
              "uid": "PCC52D03280B7034C"
            },
            "query": "WITH hourly_data AS (\n  SELECT \n    date_trunc('hour', now()) - (interval '1 hour' * generate_series(0, 23)) as hour_bucket\n  )\nSELECT \n  hour_bucket as time,\n  'Policy Reports' as metric,\n  (SELECT COUNT(*) FROM policyreports) as value\nFROM hourly_data\nUNION ALL\nSELECT \n  hour_bucket as time,\n  'Ephemeral Reports' as metric,\n  (SELECT COUNT(*) FROM ephemeralreports) as value\nFROM hourly_data\nUNION ALL\nSELECT \n  hour_bucket as time,\n  'Cluster Policy Reports' as metric,\n  (SELECT COUNT(*) FROM clusterpolicyreports) as value\nFROM hourly_data\nUNION ALL\nSELECT \n  hour_bucket as time,\n  'Cluster Ephemeral Reports' as metric,\n  (SELECT COUNT(*) FROM clusterephemeralreports) as value\nFROM hourly_data\nORDER BY hour_bucket DESC, metric",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 15,
              "gradientMode": "none",
