{
  "dashboard": {
    "id": null,
    "title": "Kyverno + PostgreSQL Testing Dashboard",
    "tags": ["kyverno", "postgresql", "testing", "monitoring"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Kyverno Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{container=\"kyverno\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Policy Enforcement Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kyverno_admission_requests_total[5m])",
            "legendFormat": "{{request_allowed}}"
          }
        ],
        "yAxes": [
          {"label": "Requests/sec", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
      },
      {
        "id": 3,
        "title": "Admission Request Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(kyverno_admission_requests_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(kyverno_admission_requests_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {"label": "Latency (seconds)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Reports by Namespace",
        "type": "piechart",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT namespace as name, COUNT(*) as value FROM policyreports GROUP BY namespace ORDER BY value DESC LIMIT 10",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Performance",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT pg_database_size('reportsdb') as size_bytes",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10485760},
                {"color": "red", "value": 104857600}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"reportsdb\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "yAxes": [
          {"label": "Connections", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Policy Reports Count",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT COUNT(*) FROM policyreports",
            "datasource": "PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Ephemeral Reports Count",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT COUNT(*) FROM ephemeralreports",
            "datasource": "PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 9,
        "title": "Cluster Policy Reports",
        "type": "stat",
        "targets": [
          {
            "expr": "SELECT COUNT(*) FROM clusterpolicyreports",
            "datasource": "PostgreSQL"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      },
      {
        "id": 10,
        "title": "Policy Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(kyverno_admission_requests_total{request_allowed=\"true\"}[5m])) / sum(rate(kyverno_admission_requests_total[5m])) * 100",
            "legendFormat": "Success Rate"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 11,
        "title": "Background Scan Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(kyverno_background_scan_duration_seconds_sum[5m]) / rate(kyverno_background_scan_duration_seconds_count[5m])",
            "legendFormat": "Avg Duration"
          }
        ],
        "yAxes": [
          {"label": "Duration (seconds)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 12,
        "title": "Resource Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{container=\"kyverno\"}[5m])) by (pod)",
            "legendFormat": "{{pod}} CPU"
          },
          {
            "expr": "sum(rate(container_memory_usage_bytes{container=\"kyverno\"}[5m])) by (pod) / 1024 / 1024",
            "legendFormat": "{{pod}} Memory (MB)"
          }
        ],
        "yAxes": [
          {"label": "CPU (cores) / Memory (MB)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 40}
      },
      {
        "id": 13,
        "title": "Node Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}} CPU %"
          },
          {
            "expr": "100 - (avg by (instance) (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100))",
            "legendFormat": "{{instance}} Memory %"
          }
        ],
        "yAxes": [
          {"label": "Usage %", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 40}
      },
      {
        "id": 14,
        "title": "Policy Violations by Type",
        "type": "barchart",
        "targets": [
          {
            "expr": "SELECT policy, COUNT(*) FROM policyreports WHERE report::jsonb->>'summary' LIKE '%fail%' GROUP BY policy",
            "datasource": "PostgreSQL"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 48}
      },
      {
        "id": 15,
        "title": "Test Progress - Namespaces Created",
        "type": "stat",
        "targets": [
          {
            "expr": "kube_namespace_created",
            "legendFormat": "Total Namespaces"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 12, "y": 48}
      },
      {
        "id": 16,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(kyverno_admission_requests_total{request_allowed=\"false\"}[5m])) / sum(rate(kyverno_admission_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 20, "y": 48}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": [],
    "gnetId": null,
    "uid": "kyverno-testing-dashboard"
  }
}
