{
  "dashboard": {
    "id": null,
    "title": "Kyverno + PostgreSQL - 4 Key Metrics",
    "tags": ["kyverno", "postgresql", "policy-reports", "metrics"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "title": "Total Policy Reports Count",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "grafana-postgresql-datasource",
              "uid": "PCC52D03280B7034C"
            },
            "query": "SELECT (SELECT COUNT(*) FROM policyreports) + (SELECT COUNT(*) FROM ephemeralreports) + (SELECT COUNT(*) FROM clusterpolicyreports) + (SELECT COUNT(*) FROM clusterephemeralreports) as total_count",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1000
                },
                {
                  "color": "red",
                  "value": 5000
                }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "title": "Database Size Usage %",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "grafana-postgresql-datasource",
              "uid": "PCC52D03280B7034C"
            },
            "query": "SELECT ROUND((pg_database_size('reportsdb')::numeric / 2147483648.0 * 100), 3) as usage_percent",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            },
            "unit": "percent",
            "decimals": 3
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      },
      {
        "title": "Policy Reports by Type",
        "type": "barchart",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "grafana-postgresql-datasource",
              "uid": "PCC52D03280B7034C"
            },
            "query": "SELECT 'Policy Reports' as type, COUNT(*) as count FROM policyreports UNION ALL SELECT 'Ephemeral Reports' as type, COUNT(*) FROM ephemeralreports UNION ALL SELECT 'Cluster Policy Reports' as type, COUNT(*) FROM clusterpolicyreports UNION ALL SELECT 'Cluster Ephemeral Reports' as type, COUNT(*) FROM clusterephemeralreports ORDER BY count DESC",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "axisLabel": "",
              "axisPlacement": "auto",
              "barAlignment": 0,
              "drawStyle": "line",
              "fillOpacity": 15,
              "gradientMode": "none",
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              },
              "lineInterpolation": "smooth",
              "lineWidth": 2,
              "pointSize": 6,
              "scaleDistribution": {
                "type": "linear"
              },
              "showPoints": "always",
              "spanNulls": false,
              "stacking": {
                "group": "A",
                "mode": "none"
              },
              "thresholdsStyle": {
                "mode": "off"
              }
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                }
              ]
            },
            "unit": "short",
            "decimals": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 8
        },
        "options": {
          "legend": {
            "calcs": ["mean", "max", "min"],
            "displayMode": "table",
            "placement": "bottom",
            "showLegend": true
          },
          "tooltip": {
            "mode": "multi",
            "sort": "desc"
          }
        },
        "yAxes": [
          {
            "label": "Report Count",
            "unit": "short",
            "min": 0
          }
        ],
        "xAxis": {
          "show": true,
          "mode": "time"
        }
      },
      {
        "title": "Database Size",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "type": "grafana-postgresql-datasource",
              "uid": "PCC52D03280B7034C"
            },
            "query": "SELECT pg_size_pretty(pg_database_size('reportsdb')) as db_size",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [],
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 100000000
                },
                {
                  "color": "red",
                  "value": 1000000000
                }
              ]
            },
            "unit": "bytes",
            "decimals": 1
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 8
        },
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "justifyMode": "auto",
          "orientation": "auto",
          "reduceOptions": {
            "calcs": ["lastNotNull"],
            "fields": "",
            "values": false
          },
          "textMode": "auto"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  },
  "folderId": 0,
  "overwrite": false
}



