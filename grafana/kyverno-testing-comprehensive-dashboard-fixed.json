{
  "dashboard": {
    "id": null,
    "title": "Kyverno + PostgreSQL Testing Dashboard (Fixed)",
    "tags": ["kyverno", "postgresql", "monitoring", "fixed"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Policy Reports Count",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM policyreports",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "green", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Ephemeral Reports Count",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM ephemeralreports",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 100},
                {"color": "green", "value": 500}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 0}
      },
      {
        "id": 3,
        "title": "Cluster Policy Reports",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM clusterpolicyreports",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 25},
                {"color": "green", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 0}
      },
      {
        "id": 4,
        "title": "Reports by Namespace",
        "type": "piechart",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT namespace as name, COUNT(*) as value FROM policyreports GROUP BY namespace ORDER BY value DESC LIMIT 10",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 5,
        "title": "Database Performance",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT pg_database_size('reportsdb') as size_bytes",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10485760},
                {"color": "red", "value": 104857600}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 6,
        "title": "Resource Utilization",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{container=\"kyverno\"}[5m])",
            "legendFormat": "{{pod}} CPU"
          },
          {
            "expr": "container_memory_usage_bytes{container=\"kyverno\"} / 1024 / 1024",
            "legendFormat": "{{pod}} Memory (MB)"
          }
        ],
        "yAxes": [
          {"label": "CPU (cores) / Memory (MB)", "min": 0}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 7,
        "title": "Node Resource Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}} CPU %"
          },
          {
            "expr": "100 - (avg by (instance) (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes * 100))",
            "legendFormat": "{{instance}} Memory %"
          }
        ],
        "yAxes": [
          {"label": "Usage %", "min": 0, "max": 100}
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 8,
        "title": "Policy Violations by Type",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM policyreports WHERE report::jsonb->>'summary' LIKE '%fail%'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 24}
      },
      {
        "id": 9,
        "title": "Test Progress - Namespaces Created",
        "type": "stat",
        "targets": [
          {
            "refId": "A",
            "datasource": {"type": "grafana-postgresql-datasource", "uid": "PCC52D03280B7034C"},
            "rawQuery": true,
            "rawSql": "SELECT COUNT(*) as count FROM clusterpolicyreports WHERE name LIKE 'load-test-%'",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 25},
                {"color": "orange", "value": 50},
                {"color": "red", "value": 100}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 24}
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(kyverno_admission_requests_total{request_allowed=\"false\"}[5m])) / sum(rate(kyverno_admission_requests_total[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 5}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 24}
      }
    ],
    "time": {
