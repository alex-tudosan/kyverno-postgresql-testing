{
  "title": "Policy Reports by Type - Time Series",
  "type": "timeseries",
  "targets": [
    {
      "refId": "A",
      "datasource": {
        "type": "grafana-postgresql-datasource",
        "uid": "PCC52D03280B7034C"
      },
      "rawQuery": true,
      "rawSql": "WITH time_series AS (\n  SELECT generate_series(now() - interval '24 hours', now(), interval '1 hour') as time\n)\nSELECT \n  time as __time,\n  'Policy Reports' as report_type,\n  (SELECT COUNT(*) FROM policyreports) as count\nFROM time_series\nUNION ALL\nSELECT \n  time as __time,\n  'Ephemeral Reports' as report_type,\n  (SELECT COUNT(*) FROM ephemeralreports) as count\nFROM time_series\nUNION ALL\nSELECT \n  time as __time,\n  'Cluster Policy Reports' as report_type,\n  (SELECT COUNT(*) FROM clusterpolicyreports) as count\nFROM time_series\nUNION ALL\nSELECT \n  time as __time,\n  'Cluster Ephemeral Reports' as report_type,\n  (SELECT COUNT(*) FROM clusterephemeralreports) as count\nFROM time_series\nORDER BY time, report_type",
      "format": "time_series",
      "timeFrom": "now-24h",
      "timeTo": "now"
    }
  ],
