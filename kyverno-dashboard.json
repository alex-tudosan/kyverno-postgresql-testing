{
  "dashboard": {
    "id": null,
    "title": "Kyverno n4k + Reports Server (PostgreSQL)",
    "tags": ["kyverno", "reports-server", "postgresql"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Policy Reports Generated",
        "type": "stat",
        "targets": [
          {
            "expr": "kyverno_policy_report_total",
            "legendFormat": "Total Reports"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Policy Violations",
        "type": "stat",
        "targets": [
          {
            "expr": "kyverno_policy_violations_total",
            "legendFormat": "Violations"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Reports Server Database Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "reports_server_db_connections_total",
            "legendFormat": "DB Connections"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "custom": {
              "displayMode": "list"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
